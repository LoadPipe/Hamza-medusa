{
  "name": "hamza-medusa",
  "version": "1.0.0",
  "description": "Monorepo for Hamza Medusa-based applications",
  "packageManager": "yarn@1.22.19",
  "private": true,
  "author": "Garo Nazarian, Beau Troxclair, Jonny Bajada, Karan Chugh, John R. Kosinski",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "prettier": "^3.2.4"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx,json,css,md}'",
    "lint": "eslint apps/*/src packages/*/src --fix"
  },
  "devDependencies": {
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.0"
  }
}
